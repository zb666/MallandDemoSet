<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/a15104"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

       <com.example.cangyigou.marqueeviewdemo.MarqueeView
           android:id="@+id/marqueeView"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           app:mvAnimDuration="1000"
           app:mvInterval="5000"
           app:mvTextColor="#00f"
           app:mvTextSize="14sp"
           app:mvSingleLine="true"/>

       <ViewFlipper
           android:id="@+id/vl_main_four"
           android:flipInterval="3500"
           android:paddingTop="@dimen/px_120"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

              <LinearLayout
                  android:text="123456"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                     <TextView
                         android:text="lihai9了"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>

                     <ImageView
                         android:src="@mipmap/ic_launcher"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
                  </LinearLayout>
              <TextView
                  android:text="我的天"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:text="厉害了牛逼"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:text="哈哈哈"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:text="的您是否尽可能"
                  android:gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

       </ViewFlipper>
</LinearLayout>